<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <script src="/socket.io/socket.io.js"></script>
    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

    <div class="container mt-5">
        <h1 class="text-center mb-4">Admin Panel - Update Order Status</h1>

        <!-- Search Bar -->
        <div class="card shadow p-4 mb-4">
            <input type="text" id="searchInput" class="form-control" placeholder="Search by Bill No">
        </div>

        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Bill No</th>
                    <th>Status</th>
                    <th>Update</th>
                </tr>
            </thead>
            <tbody id="orderList">
                <% orders.forEach(order=> { %>
                    <tr class="order-row">
                        <td class="bill-number">
                            <%= order.billNo %>
                        </td>
                        <td id="status-<%= order.billNo %>">
                            <%= order.status %>
                        </td>
                        <td>
                            <select name="status" class="form-select"
                                onchange="updateOrder('<%= order.billNo %>', this.value)">
                                <option value="Pending" <%=order.status==='Pending' ? 'selected' : '' %>>Pending
                                </option>
                                <option value="Arrived" <%=order.status==='Arrived' ? 'selected' : '' %>>Arrived
                                </option>
                                <option value="Delivered" <%=order.status==='Delivered' ? 'selected' : '' %>>Delivered
                                </option>
                            </select>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <script>
        const socket = io({
            reconnection: true,
            reconnectionAttempts: 5, // Try reconnecting 5 times
            reconnectionDelay: 2000, // Wait 2 sec before retrying
        });

        // âœ… Log connection status
        socket.on('connect', () => console.log("âœ… Connected to WebSocket"));
        socket.on('disconnect', (reason) => console.warn("âš ï¸ WebSocket Disconnected:", reason));
        socket.on('reconnect_attempt', (attempt) => console.log(`ðŸ”„ Reconnecting... Attempt ${attempt}`));

        // Update UI in real-time when an order is updated
        socket.on('orderUpdate', (data) => {
            let statusElement = document.getElementById(`status-${data.billNo}`);
            if (statusElement) {
                statusElement.innerText = data.status;
            }
        });


        function updateOrder(billNo, status) {
            socket.emit("updateOrderStatus", { billNo, status });

            // âœ… Listen for success confirmation
            socket.on("updateSuccess", (data) => {
                console.log(`âœ… Order ${data.billNo} successfully updated to ${data.status}`);
                // alert(`Order ${data.billNo} updated to ${data.status}`);
            });

            // âŒ Listen for failure response
            socket.on("updateFailed", (data) => {
                console.error("âŒ Update failed:", data.message);
                alert("Failed to update order. Please try again.");
            });
        }


        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function () {
            const searchValue = this.value.toLowerCase();
            const rows = document.querySelectorAll('.order-row');

            rows.forEach(row => {
                const billNo = row.querySelector('.bill-number').textContent.toLowerCase();
                if (billNo.includes(searchValue)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    </script>

</body>

</html>